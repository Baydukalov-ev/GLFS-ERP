	бг_ИспользоватьНомерДиапазонаВРулоне.Заголовок = НСтр("ru = 'Номер диапазона в рулоне'; en = 'Номер диапазона в рулоне'");
	бг_ИспользоватьНомерДиапазонаВРулоне.Вид = ВидПоляФормы.ПолеФлажка;	
	
	бг_ИспользоватьНачальныйНомерДиапазона = бг_МодификацияИнтерфейсовОбщегоНазначенияСервер.ДобавитьПолеНаФорму(
		ЭтотОбъект, 
		"бг_ИспользоватьНачальныйНомерДиапазона", 
		ГруппаФСМ, 
		"Объект.бг_ИспользоватьНачальныйНомерДиапазона");
	бг_ИспользоватьНачальныйНомерДиапазона.Заголовок = НСтр("ru = 'Начальный номер диапазона'; en = 'Начальный номер диапазона'");
	бг_ИспользоватьНачальныйНомерДиапазона.Вид = ВидПоляФормы.ПолеФлажка;	
		
	бг_ИспользоватьКонечныйНомерДиапазона = бг_МодификацияИнтерфейсовОбщегоНазначенияСервер.ДобавитьПолеНаФорму(
		ЭтотОбъект, 
		"бг_ИспользоватьКонечныйНомерДиапазона", 
		ГруппаФСМ, 
		"Объект.бг_ИспользоватьКонечныйНомерДиапазона");
	бг_ИспользоватьКонечныйНомерДиапазона.Заголовок = НСтр("ru = 'Конечный номер диапазона'; en = 'Конечный номер диапазона'");
	бг_ИспользоватьКонечныйНомерДиапазона.Вид = ВидПоляФормы.ПолеФлажка;	
	
	бг_ИспользоватьЗаявлениеОВыдачеФСМ = бг_МодификацияИнтерфейсовОбщегоНазначенияСервер.ДобавитьПолеНаФорму(
		ЭтотОбъект, 
		"бг_ИспользоватьЗаявлениеОВыдачеФСМ", 
		ГруппаФСМ, 
		"Объект.бг_ИспользоватьЗаявлениеОВыдачеФСМ");
	бг_ИспользоватьЗаявлениеОВыдачеФСМ.Заголовок = НСтр("ru = 'Заявление ФСМ'; en = 'Заявление ФСМ'");
	бг_ИспользоватьЗаявлениеОВыдачеФСМ.Вид = ВидПоляФормы.ПолеФлажка;	
	
	бг_ИспользоватьНакладнаяНаВыдачуФСМ = бг_МодификацияИнтерфейсовОбщегоНазначенияСервер.ДобавитьПолеНаФорму(
		ЭтотОбъект, 
		"бг_ИспользоватьНакладнаяНаВыдачуФСМ", 
		ГруппаФСМ, 
		"Объект.бг_ИспользоватьНакладнаяНаВыдачуФСМ");
	бг_ИспользоватьНакладнаяНаВыдачуФСМ.Заголовок = НСтр("ru = 'Выдача ФСМ'; en = 'Выдача ФСМ'");
